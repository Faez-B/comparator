{# Flash Messages Component #}
<div class="fixed top-20 right-4 z-50 space-y-3" id="flashContainer">
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-message animate-slide-in bg-white dark:bg-gray-800 rounded-lg shadow-lg border-l-4 
                {% if type == 'success' or type == 'success_register' %}border-accent-500{% endif %}
                {% if type == 'error' or type == 'danger' %}border-red-500{% endif %}
                {% if type == 'warning' %}border-yellow-500{% endif %}
                {% if type == 'info' %}border-primary-500{% endif %}
                p-4 flex items-start space-x-3 max-w-md">
                
                {# Icon #}
                <div class="flex-shrink-0">
                    {% if type == 'success' or type == 'success_register' %}
                        <i class="fa-solid fa-circle-check text-accent-500 text-xl"></i>
                    {% elseif type == 'error' or type == 'danger' %}
                        <i class="fa-solid fa-circle-exclamation text-red-500 text-xl"></i>
                    {% elseif type == 'warning' %}
                        <i class="fa-solid fa-triangle-exclamation text-yellow-500 text-xl"></i>
                    {% else %}
                        <i class="fa-solid fa-circle-info text-primary-500 text-xl"></i>
                    {% endif %}
                </div>
                
                {# Message #}
                <div class="flex-1">
                    <p class="text-sm font-medium text-gray-900 dark:text-gray-100">{{ message }}</p>
                </div>
                
                {# Close Button #}
                <button class="croix flex-shrink-0 text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 transition-colors">
                    <i class="fa-solid fa-times"></i>
                </button>
            </div>
        {% endfor %}
    {% endfor %}
</div>

<style>
    @keyframes slide-in {
        from {
            transform: translateX(400px);
            opacity: 0;
        }
        to {
            transform: translateX(0);
            opacity: 1;
        }
    }
    
    .animate-slide-in {
        animation: slide-in 0.3s ease-out;
    }
</style>
