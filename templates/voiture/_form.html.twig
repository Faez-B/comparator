{{ form_start(form, { 'attr' : { 'class' : 'my-4' } }) }}
    <div>{{ form_widget(form.nom) }}</div>

    <div>{{ form_widget(form.marque) }}</div>

    <div>{{ form_widget(form.energie) }}</div>

    <div>{{ form_widget(form.etat) }}</div>

    <div class="occasion {% if not voiture.annee and not voiture.kilometrage %}hidden{% endif %}">
        <div>{{ form_widget(form.annee) }}</div>

        <div>{{ form_widget(form.kilometrage) }}</div>
    </div>

    <div>{{ form_widget(form.prix) }}</div>

    <div>{{ form_widget(form.consommation) }}</div>

    <div class="text-center my-3">
        <button class="btn px-3 py-2 bg-lime-500 border border-lime-500 border-2 rounded-md hover:bg-white hover:text-lime-500">{{ button_label|default('Cr√©er') }}</button>
    </div>
{{ form_end(form) }}
