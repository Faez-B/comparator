{% for voiture in voitures %}
    <tr>
        <td>{{ voiture.nom }}</td>
        <td>{{ voiture.prix }}</td>
        {% if voiture.energie %}
            <td>{{ voiture.energie.nom }}</td>
        {% else %}
            <td class="italic text-gray-400">Non spécifié</td>
        {% endif %}
        <td>{{ voiture.marque.nom }}</td>
        <td>{{ voiture.etat|capitalize }}</td>
        <td>
            {% if voiture.consommation %}
            
                {{ voiture.consommation }} 

                {% if voiture.energie.id == 4 %}
                    kWh
                {% else %}
                    L/100 km
                {% endif %}
            {% else %}
                <span class="italic text-gray-400">Non spécifié</span>
            {% endif %}
        </td>
        <td class="italic text-gray-400">{{ voiture.lastUpdate|date("d/m/Y") }}</td>
        <td>
            <a href="{{ path('app_voiture_show', {'id': voiture.id}) }}">show</a>
            {% if is_granted("ROLE_ADMIN") %}
                <a href="{{ path('app_voiture_edit', {'id': voiture.id}) }}">edit</a>
            {% endif %}
        </td>
    </tr>
{% else %}
    <tr>
        <td colspan="4">Aucun résultat</td>
    </tr>
{% endfor %}