{% extends 'base.html.twig' %}

{% block title %}Voiture index{% endblock %}

{% block body %}
    <h1 class="text-center">Voiture index</h1>

    <div class="my-3">
        <a href="{{ path('voiture_new') }}" class="
        bg-lime-500 
        text-white 
        p-1 px-2  
        border-2 border-lime-500 
        hover:bg-white hover:text-lime-500">Ajouter une voiture</a>
    </div>

    <div class="columns-1 lg:columns-2">
        <div class="">
            <div>
                <select class="px-3 dark:text-slate-200 dark:bg-slate-400" name="energieAjax" id="energieAjax">
                    <option value="">Choisissez une énergie</option>
                    {% for energie in energies %}
                        <option value="{{ energie.id }}">{{ energie.nom }}</option>
                    {% endfor %}
                </select>
            </div>

            <div>
                <select class="px-3 dark:text-slate-200 dark:bg-slate-400" name="marqueAjax" id="marqueAjax">
                    <option value="">Choisissez une marque</option>
                    {% for marque in marques %}
                        <option value="{{ marque.id }}">{{ marque.nom }}</option>
                    {% endfor %}
                </select>
            </div>

            <div>
                <label for="prixAjax">Prix maximum (entre 0€ et {{ prixMax }}€) : </label>
                <input type="range" id="prixAjax" name="prixAjax" min="0" max="{{ prixMax }}" step="500" value="0"> 
                <span id="rangeValue">0</span>
            </div>
        </div>

        <div class="">
            <div>
                <select class="px-3 dark:text-slate-200 dark:bg-slate-400" name="trie" id="trie">
                    <option value="">Trier par</option>
                    <option value="alphabet">Alphabétique</option>
                    <option value="prixASC">Prix croissant</option>
                    <option value="prixDESC">Prix décroissant</option>
                    {# <option value="consoElecASC">Consommation électrique croissante</option> #}
                    {# <option value="consoElecDESC">Consommation électrique décroissante</option> #}
                </select>
            </div>

            <div>
                <input type="checkbox" name="etatSelector" id="etatSelector">
                <label for="etatSelector">Ne montrer que les voitures neuves</label>
            </div>
        </div>
    </div>

    <table class="block overflow-auto border-2 lg:table" width="100%" id="voiture_index">
        <thead align="center">
            <tr>
                <th class="border-r-2 border-b-2">Nom</th>
                <th class="border-r-2 border-b-2">Prix (€)</th>
                <th class="border-r-2 border-b-2">Énergie</th>
                <th class="border-r-2 border-b-2">Marque</th>
                <th class="border-r-2 border-b-2">État</th>
                <th class="border-r-2 border-b-2">Année</th>
                <th class="border-r-2 border-b-2">Consommation</th>
                <th class="border-r-2 border-b-2">Kilométrage (km)</th>
                <th class="border-r-2 border-b-2">Mise à jour</th>
                <th class="border-b-2">actions</th>
            </tr>
        </thead>
        <tbody align="center" id="voiture_index_body">
            {% include "voiture/_index_body.html.twig" %}
        </tbody>
    </table>
{% endblock %}
