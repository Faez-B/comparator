{% extends 'base.html.twig' %}

{% block title %}Création d'un compte{% endblock %}

{% block body %}
    <div class="register">
        {# <h1 class="text-center">Se créer un compte</h1> #}

        {{ form_start(registrationForm) }}
            <fieldset class="border border-gray-500 dark:border-slate-500">
                <legend class="px-3 text-gray-500 dark:text-slate-400">Nouveau compte</legend>
                
                <div class="relative z-0 mb-6 w-full group">
                    {{ form_widget(registrationForm.email, 
                        {'attr': 
                            {
                                'class': 
                                    'block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer',
                                'placeholder': ' '
                            }
                        }
                        ) 
                    }}
                    {{ form_label(registrationForm.email, '', 
                        {'label_attr': 
                            {'class': 
                                'peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:left-0 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6' 
                            }
                        }
                        ) 
                    }}
                </div>

                <div class="relative z-0 mb-6 w-full group">
                    {{ form_widget(registrationForm.plainPassword, 
                        {'attr': 
                            {
                                'class': 
                                    'block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer',
                                'placeholder': ' '
                            }
                        }
                        ) 
                    }}
                    {{ form_label(registrationForm.plainPassword, '', 
                        {'label_attr': 
                            {'class': 
                                'peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:left-0 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6' 
                            }
                        }
                        ) 
                    }}
                </div>

                <div class="mt-2 text-center">
                    <button type="submit" class="
                    bg-blue-500 
                    text-white 
                    p-1 px-2 rounded-md 
                    border-2 border-blue-500 
                    hover:bg-white hover:text-blue-500
                    ">S'enregistrer</button>
                </div>
            </fieldset>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
