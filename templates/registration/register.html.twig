{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
    <div class="page-container max-w-md mx-auto">
        <div class="card">
            <div class="mb-6">
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">
                    <i class="fas fa-user-plus text-primary-600 dark:text-primary-400"></i>
                    Créer un compte
                </h1>
                <p class="text-gray-600 dark:text-gray-400">
                    Rejoignez-nous pour comparer des voitures
                </p>
            </div>

            {{ form_start(registrationForm) }}
                <div class="mb-4">
                    {{ form_label(registrationForm.email, 'Adresse email', {
                        'label_attr': {'class': 'form-label'}
                    }) }}
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-envelope text-gray-400"></i>
                        </div>
                        {{ form_widget(registrationForm.email, {
                            'attr': {
                                'class': 'form-input pl-10',
                                'placeholder': 'votre@email.com',
                                'autocomplete': 'email',
                                'aria-label': 'Adresse email'
                            }
                        }) }}
                    </div>
                    {{ form_errors(registrationForm.email) }}
                </div>

                <div class="mb-6">
                    {{ form_label(registrationForm.plainPassword, 'Mot de passe', {
                        'label_attr': {'class': 'form-label'}
                    }) }}
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-lock text-gray-400"></i>
                        </div>
                        {{ form_widget(registrationForm.plainPassword, {
                            'attr': {
                                'class': 'form-input pl-10',
                                'placeholder': '••••••••',
                                'autocomplete': 'new-password',
                                'aria-label': 'Mot de passe'
                            }
                        }) }}
                    </div>
                    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                        <i class="fas fa-info-circle"></i>
                        Le mot de passe doit contenir au moins 8 caractères
                    </p>
                    {{ form_errors(registrationForm.plainPassword) }}
                </div>

                <div class="flex flex-col gap-3">
                    <button type="submit" class="btn btn-accent w-full">
                        <i class="fas fa-user-plus mr-2"></i>
                        Créer mon compte
                    </button>

                    <div class="text-center text-sm text-gray-600 dark:text-gray-400">
                        Vous avez déjà un compte ?
                        <a href="{{ path('login') }}" class="text-primary-600 dark:text-primary-400 hover:underline font-medium">
                            Se connecter
                        </a>
                    </div>
                </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
