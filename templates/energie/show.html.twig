{% extends 'base.html.twig' %}

{% block title %}Énergie : {{ energie.nom }}{% endblock %}

{% block body %}
<div class="page-container">
    <div class="flex items-center justify-between mb-4">
        <h1 class="text-3xl md:text-4xl font-bold mb-2 flex items-center">
            <i class="fa-solid fa-bolt text-accent-600 mr-2"></i>
            {{ energie.nom }}
        </h1>
        <a href="{{ path('energie_index') }}" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left mr-2"></i>
            Retour
        </a>
    </div>

    <div class="card">
        <h2 class="text-xl font-semibold mb-4">Détails</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <p class="text-sm text-gray-500">ID</p>
                <p class="text-lg font-semibold">{{ energie.id }}</p>
            </div>
            <div>
                <p class="text-sm text-gray-500">Nom</p>
                <p class="text-lg font-semibold">{{ energie.nom }}</p>
            </div>
        </div>
        <div class="flex gap-3 mt-6">
            <a href="{{ path('energie_edit', {'id': energie.id}) }}" class="btn btn-primary">
                <i class="fa-solid fa-pencil mr-2"></i>
                Modifier
            </a>
            {{ include('energie/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
